@using Microsoft.AspNet.Identity
@model ElectionTool.Models.AnswerIndexViewModel

@{
    ViewBag.Title = "Index";
    var userId = (User.Identity.GetUserId() ?? "");
}

<h2>質問一覧</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>質問内容</th>
    </tr>
    @foreach (var q in Model.Questions)
    {
        <tr>
            <td>@q.Id</td>
            <td>@q.Text</td>
            <td>@(q.Answers.FirstOrDefault(x => x.UserId == userId) == null ? "" : q.Answers.FirstOrDefault(x => x.UserId == userId).Text)</td>
            <td>@Html.ActionLink("回答する", "Entry", new { id = q.Id })</td>
        </tr>
    }
</table>